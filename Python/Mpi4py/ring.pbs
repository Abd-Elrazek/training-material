#!/bin/bash -l

module purge

case ${VSC_INSTITUTE_CLUSTER} in
    vic3)
        module load openmpi/1.4.3_intel python/2.7.1
        ;;
    thinking)
        module load mpi4py/1.3.1-goolf-2014a-Python-2.7.6
        ;;
esac

cd ${PBS_O_WORKDIR}

mpirun -machinefile ${PBS_NODEFILE} \
       -x PATH -x LD_LIBRARY_PATH -x PYTHONPATH \
       ./ring.py

